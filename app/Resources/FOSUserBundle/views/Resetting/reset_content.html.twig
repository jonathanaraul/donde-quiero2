{% trans_default_domain 'FOSUserBundle' %}

{% include '::header.html.twig'  with {'clase': 'gris'}  %}
{% include '::mensaje.html.twig'  with {'titulo': 'Nueva contraseña','subtitulo': 'Introduzca su nueva clave','accion':''}  %}


<!-- Content starts -->
<div class="content">
	<div class="container">

		<div class="register">
			<div class="row">
				<div class="span6">
					<h2>Ingrese su nueva contraseña</h2>
					<p class="big grey">
						Y podra acceder de nuevo a nuestra seccion privada.
					</p>

				</div>

				<div class="span6">
					<div class="formy bred">
						<h3>Acceda a su cuenta</h3>
						<div class="form">
							<form action="{{ path('fos_user_resetting_reset', {'token': token}) }}" {{ form_enctype(form) }} method="POST" class="fos_user_resetting_reset">
								{{ form_widget(form) }}
								<div>
									<input type="submit" value="{{ 'resetting.reset.submit'|trans }}" />
								</div>
							</form>
						</div>
					</div>

				</div>
			</div>
		</div>

	</div>
</div>
{% render controller('ProjectFrontBundle:Helpers:frase') %}