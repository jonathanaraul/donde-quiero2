{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}

{% include '::header.html.twig'  with {'clase': 'gris'}  %}
{% include '::mensaje.html.twig'  with {'titulo': 'Acceso','subtitulo':'Inicia sesión','accion':'Chequea las últimas informaciones'}  %}

<!-- Content starts -->
<div class="content">
	<div class="container">

		<div class="register">
			<div class="row">
				<div class="span6">
					<h2>Acceda a su cuenta</h2>

					<p class="big grey">
						Y descubra las ultimas novedades e informaciones de tufuturo.com.ve
					</p>

				</div>

				<div class="span6">
					<div class="formy bred">
						<h3>Acceda a su cuenta</h3>
						<div class="form">
							{% if error %}
					            <p>{{ error|trans }}</p>
					        {%endif%}
							<!-- Login form (not working)-->
							<form class="form-horizontal" action="{{ path("fos_user_security_check") }}" method="post"/>
							    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
								<!-- Username -->
								<div class="control-group">
									<label class="control-label" for="username">{{ 'security.login.username'|trans }}</label>
									<div class="controls">
										<input type="text" id="username" name="_username" value="{{ last_username }}" placeholder="{{ last_username }}" required="required" class="input-large"/>
									</div>
								</div>
								<!-- Password -->
								<div class="control-group">
									<label class="control-label" for="email">{{ 'security.login.password'|trans }}</label>
									<div class="controls">
										<input type="password" id="password" name="_password" required="required" class="input-large"/>
									</div>
								</div>
								<div class="control-group">
									<div class="controls">
										<label class="checkbox">
											<input type="checkbox" id="remember_me" name="_remember_me" value="on" />
											{{ 'security.login.remember_me'|trans }} </label>
									</div>
								</div>
								<!-- Buttons -->
								<div class="form-actions">
									<!-- Buttons -->
									<button type="submit" class="btn">
										{{ 'security.login.submit'|trans }}
									</button>
								</div>
								 <input type="hidden" name="_target_path" value="/conferencias" />
							</form>
							¿No tiene cuenta? <a href="{{ path('fos_user_registration_register') }}">Registrese aquí</a></br>
							¿Olvido su contraseña? <a href="{{ path('fos_user_resetting_request') }}">Solicite una nueva</a></br>
						</div>
					</div>

				</div>
			</div>
		</div>

	</div>
</div>
<!-- Content ends -->

<!-- Footer -->
{% render controller('ProjectFrontBundle:Helpers:frase') %}

{% endblock fos_user_content %}
